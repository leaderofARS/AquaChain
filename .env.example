# Example environment variables for AquaChain

# Backend
PORT=5000
FRONTEND_ORIGIN=http://localhost:3000

# PostgreSQL
# Either use a full DATABASE_URL, or PG* variables will be used to build it
DATABASE_URL=
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=Abhay
PGDATABASE=smart_irrigation

# Blockchain (HTTP/WS RPC and keys)
# Prefer RPC_URL / RPC_WS; fall back to SEPOLIA_RPC / SEPOLIA_WS
RPC_URL=http://127.0.0.1:8545
RPC_WS=
SEPOLIA_RPC=
SEPOLIA_WS=
# Provide one of the following keys (do not commit real keys)
PRIVATE_KEY=
WALLET_PRIVATE_KEY=
DEPLOYER_KEY=
# Contract address to anchor to
IRRIGATION_AUDIT_ADDRESS=0x0000000000000000000000000000000000000000

# Frontend CORS (optional override)
CORS_ORIGIN=http://localhost:5173

# Database (PostgreSQL)
POSTGRES_USER=app_user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=aquachain
POSTGRES_PORT=5432
# Example container connection (when running via docker-compose)
# DATABASE_URL=postgresql://app_user:${POSTGRES_PASSWORD}@postgres:5432/aquachain?schema=public

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me_admin

# Legacy / alternative vars supported by Contracts and older setups
SEPOLIA_RPC_URL=
IRRIGATION_CONTRACT_ADDRESS=

# Reindexer
REINDEX_FROM_BLOCK=
REINDEX_TO_BLOCK=

# Other
USERS_JSON_PATH=./data/users.json
